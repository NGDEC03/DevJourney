generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userName       String    @id @unique
  Email          String    @unique
  Name           String?
  password       String
  cName          String?
  acceptanceRate Float?
  createdAt      DateTime  @default(now())
  tags           String[]
  problems       Problem[]
  
}

model Problem {
  problemId   Int    @id @default(autoincrement())
  problemName String
  userName    String
  problemD    String
  difficulty  String
  nTried      Int @default(0)
  nSuccess    Int @default(0)
  timeLimit   Int
  memoryLimit Int
  tCases      Case[]
  user        User?   @relation(fields: [userName], references: [userName])
  Tag         String[]
}

model Case {
  caseId      Int     @id @default(autoincrement())
  input       String
  output      String
  explanation String?
  problemId   Int
  problem     Problem @relation(fields: [problemId], references: [problemId])
}
