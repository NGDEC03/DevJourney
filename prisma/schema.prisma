generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DB_URL")
}

model User {
  userName         String       @id @map("_id")
  email            String       @unique
  name             String?
  password         String
  companyName      String?
  acceptanceRate   Float?
  createdAt        DateTime     @default(now())
  tags             String[]
  problems         Problem[]    @relation("UserProblems")
  avatar           String?
  submissions      Submission[]
  streak           Int          @default(0)
  ranking          Int?
  learningProgress Float?
  isAdmin          Boolean?
}

model Problem {
  problemId          String   @id @map("_id") @default(auto()) @db.ObjectId
  problemName        String
  problemDescription String
  difficulty         String
  attemptCount       Int      @default(0)
  successCount       Int      @default(0)   
  memoryLimit        Int
  timeLimit          Int
  tags               String[]
  createdAt          DateTime @default(now())

  userName    String?
  user        User?        @relation("UserProblems", fields: [userName], references: [userName])
  testCases   Case[]
  constraint  String[]
  submissions Submission[]

}

model Case {
  caseId      String  @id @map("_id") @default(auto()) @db.ObjectId
  input       String
  output      String
  explanation String?

  problemId String
  problem   Problem @relation(fields: [problemId], references: [problemId])
} 

model Submission {
  id                String   @id @map("_id") @default(auto()) @db.ObjectId
  status            String
  language          String
  runtime           String?
  memory            String?
  submittedAt       DateTime @default(now())
  failedTestCaseId  String?  
  failureReason     String?  

  userId    String
  problemId String 

  user    User    @relation(fields: [userId], references: [userName])
  problem Problem @relation(fields: [problemId], references: [problemId])

}
