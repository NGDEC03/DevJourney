generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  userName       String    @id @unique
  Email          String    @unique
  Name           String?
  password       String
  cName          String?
  problems       Problem[]
  tags           String[]
  acceptanceRate Float?
  createdAt      DateTime  @default(now())
  avatar         String?
}

model Problem {
  problemId   Int      @id @default(autoincrement())
  problemName String
  tags        String[]
  userName    String
  user        User?    @relation(fields: [userName], references: [userName])
  problemD    String
  tCases      Case[]
  difficulty  String
  nTried      Int?
  nSuccess    Int?
  timeLimit   Int
  memoryLimit Int
}

model Case {
  caseId      Int     @id @default(autoincrement())
  input       String
  output      String
  explanation String?
  problemId   Int
  problem     Problem @relation(fields: [problemId], references: [problemId])
}
